## i3 config file for Axyl
##

set $alt Mod1
set $mod Mod4

##~~~ Global Font ~~~~~~~~~~~~~~~~~~~~~~ 
##

font pango:Source Code Pro Medium 10


##~~~ Gaps Configuration ~~~~~~~~~~~~~~~ 
##

# Title bar text alignment
title_align center

# Uncomment this to enable title bars
#for_window [class=".*"] border normal 4

# Uncomment this to disable title bars
for_window [class=".*"] border pixel 3

# Gaps (Outer gaps are added to the inner gaps)
gaps inner 10
gaps outer 0

# Only enable gaps on a workspace when there is at least one container
#smart_gaps on

# Activate smart borders (always)
#smart_borders on

##~~~ Default Color Scheme (Everforest) 
##

client.background       #2b3339

# class                 border  backgr. text    indicator child_border
client.focused          #81A1C1 #81A1C1 #D8DEE9 #a7c080   #81A1C1
client.focused_inactive #61AFEF #61AFEF #2E3440 #a7c080   #61AFEF
client.unfocused        #3B4252 #3B4252 #D8DEE9 #a7c080   #3B4252
client.urgent           #BF616A #BF616A #D8DEE9 #a7c080   #BF616A
client.placeholder      #2E3440 #2E3440 #D8DEE9 #a7c080   #2E3440


##~~~ Keybindings ~~~~~~~~~~~~~~~~~~~~~~
##

# custom launch shortcuts
# launch on default workspace
bindsym $mod+t exec alacritty; workspace number $ws1
bindsym $mod+b exec firefox; workspace number $ws2
bindsym $mod+e exec thunar; workspace number $ws3
bindsym $mod+c exec neovide; workspace number $ws4
bindsym $mod+g exec lutris; workspace number $ws5
# launch on current workspace
bindsym $mod+$alt+t exec "alacritty --class alacrAlt,alacrAlt"
bindsym $mod+$alt+b exec bash ~/.config/i3/firefox/foxB.sh
bindsym $mod+$alt+e exec thunar --class thnrAlt
bindsym $mod+$alt+c exec neovide --x11-wm-class nvdAlt

# toggle scratchpad terminal
bindsym $mod+y [class="scratchpad"] scratchpad show; [class="scratchpad"] move position center
# toggle autokey
bindsym $mod+a [class="Autokey-gtk"] scratchpad show
# toggle autokey
bindsym $mod+w [class="Variety"] scratchpad show
bindsym $mod+space exec ~/.config/rofi/launchers/colorful/launcher.sh

# reload the configuration file
#bindsym $mod+Shift+c reload

# Restart/Quit i3 session 
bindsym $mod+r restart
bindsym $mod+Shift+r exec systemctl reboot
bindsym $mod+Shift+x exec systemctl poweroff
bindsym $mod+Shift+q exec "pkill -KILL -u $USER"

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# kill focused window
bindsym $mod+q kill

# change focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+h split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+Shift+t split h layout tabbed
bindsym $mod+Shift+s layout toggle split

# toggle tiling / floating
# bindsym $mod+Shift+space floating toggle


# focus the parent container
bindsym $mod+p focus parent

# focus the child container
bindsym $mod+Shift+c focus child

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1;workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2;workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3;workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4;workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5;workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6;workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7;workspace number $ws7

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+Return mode "resize"

##~~~ Rules For Workspaces ~~~~~~~~~~~~~~~~~~~~
##

for_window [class="Alacritty"] move to workspace 1

for_window [class="Brave-browser|Microsoft-edge|firefox"] move to workspace 2

for_window [class="Thunar"] move to workspace 3

for_window [class="neovide|Geany|Code"] move to workspace 4

for_window [class="Lutris"] move to workspace 5

for_window [class="Spotify"] move to workspace 6

for_window [class="discord|silos-whatsapp|Signal"] move to workspace 7

##~~~ Rules For Windows ~~~~~~~~~~~~~~~~~~~~~~~ 
##

for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable

for_window [class="zoom"] floating enable
for_window [class="Alafloat|Matplotlib"] floating enable
for_window [class="Onboard|Yad"] floating enable
for_window [class="feh|Viewnior|MPlayer"] floating enable

# scratchpad config
for_window [class="scratchpad"] floating enable
for_window [class="scratchpad"] move scratchpad
for_window [class="Autokey-gtk"] move scratchpad
for_window [class="Variety"] move scratchpad
# for_window [class="scratchpad"] resize 600 400


##~~~ Autostart ~~~~~~~~~~~~~~~~~~~~~~~~~~~~ 
##

exec_always --no-startup-id "~/.config/i3/bin/autostart.sh"
exec --no-startup-id alacritty --class scratchpad,scratchpad 
